<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="主界面 Giao diện chính"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 功能模块 -->
    <LinearLayout
        android:id="@+id/function_module_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Query Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:text="查询 Tra cứu"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/query_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:src="@drawable/query"
                android:contentDescription="Query"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />
            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <!-- Call AGV Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            android:text="呼叫 Gọi"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/call_agv_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:src="@drawable/calltrolley"
                android:contentDescription="Call AGV"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            android:text="半自动请求 Yêu cầu bán tự động"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/request_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Half Automatic Request"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_call" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <!-- Running Status Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:paddingBottom="8dp"
            android:text="任务和异常 Nhiệm vụ / Sự cố"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/running_status_exception_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bulb_blue"
                android:contentDescription="Running Status"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />
            <ImageButton
                android:id="@+id/running_status_task_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/task"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:contentDescription="Running Status"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter" />
            <View
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="0" />
            
        </LinearLayout>
       
    </LinearLayout>

    <!-- 底部导航按钮 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/homepage"
            android:contentDescription="Home"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/about"
            android:contentDescription="Info"
            android:layout_weight="0.5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>