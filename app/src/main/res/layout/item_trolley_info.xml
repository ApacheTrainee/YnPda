<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="16dp">

    <!-- Left fixed image -->
 
    <ImageView
        android:id="@+id/fixed_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/trolley"
        android:contentDescription="Fixed Image"
        android:layout_marginEnd="8dp" />

    <!-- Trolley number and location info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Trolley number -->
        <TextView
            android:id="@+id/trolley_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trolley Number"
            android:textSize="18sp"
            android:textStyle="bold" />

            <!-- Location info with icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Location Icon"
                    android:layout_marginStart="2dp" />
                <TextView
                    android:id="@+id/location_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location Info"
                    android:textSize="14sp" />
            </LinearLayout>
        
        </LinearLayout>


    <Button
        android:id="@+id/call_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"

        android:backgroundTint="@color/blue_light"
        android:contentDescription="Call"
        android:text="Call" 
        android:textSize="12sp"/>
    <!-- Call button -->
   
</LinearLayout>