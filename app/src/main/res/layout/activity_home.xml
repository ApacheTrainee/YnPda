<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <!-- 上半部分 -->
    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="功能界面 Giao diện chức năng"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- 菜单框 -->
    <LinearLayout
        android:id="@+id/bind_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/top_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:text="绑定/解绑 Gán / Hủy gán"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- 横线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:gravity="start">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageButton
                    android:id="@+id/bindproduct"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/bindproduct"
                    android:contentDescription="Bind Products"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="2dp"

                    android:text="绑定产品        Gắn kết sản phẩm"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/bindground"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/bindground"
                    android:contentDescription="Bind Location"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="绑定地码          Gán mã mặt đất"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/unbind"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/unbind"
                    android:contentDescription="Unbind"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="解绑 Hủy gán"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- 添加更多菜单项 -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/trolley_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/bind_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:text="叫料/下料 Gọi liệu / Tháo liệu"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- 横线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:gravity="start">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/calltrolley"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/calltrolley"
                    android:contentDescription="calltrolley"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="叫料 Gọi liệu"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/sendtrolley"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/sendtrolley"
                    android:contentDescription="sendtrolley"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="下料 Tháo liệu"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/query"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/query"
                    android:contentDescription="query"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="2dp"
                    android:text="查询产品             Tra sản phẩm"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- 添加更多菜单项 -->
    </LinearLayout>


    <!-- 下半部分 -->
    <LinearLayout
        android:id="@+id/exception_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/trolley_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/exception_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/exception_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="异常消息 Thông báo bất thường"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/bulb_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bulb"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/exception_text"
                app:layout_constraintBottom_toBottomOf="@id/exception_text" />

            <TextView
                android:id="@+id/exception_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/holo_red_dark"
                 app:layout_constraintStart_toEndOf="@id/bulb_icon"
                app:layout_constraintBottom_toBottomOf="@id/exception_text"
                android:textSize="18sp"
                android:layout_marginStart="4dp" />

            <ImageButton
                android:id="@+id/refresh_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_refresh"
                app:layout_constraintBottom_toBottomOf="@id/exception_text"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 横线 -->
        <View
            android:id="@+id/exception_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
        <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exception_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/exception_section"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="@id/exception_section"
        app:layout_constraintEnd_toEndOf="@id/exception_section"
        tools:itemCount="8" />


    <!-- 底部导航按钮 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.33"
            android:src="@drawable/homepage"
            android:contentDescription="home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"/>
            <ImageButton
         android:id="@+id/forklift"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.33"
            android:src="@drawable/forklift3"
            android:contentDescription="forklift"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/info"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0.33"
            android:layout_gravity="center_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="info"
            android:scaleType="fitCenter"
            android:src="@drawable/about" />
    </LinearLayout>
   
</androidx.constraintlayout.widget.ConstraintLayout>