<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusedByDefault="false"
    tools:context=".BindGroundActivity">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--<ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:contentDescription="Back" />-->

        <TextView
            android:id="@+id/info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="绑定产品 Gắn kết sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- QR Code 扫描框 -->
    <LinearLayout
        android:id="@+id/qr_code_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_nav">


        <TextView
            android:id="@+id/qr_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="货架码:"
            android:textSize="16sp"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/qr_code_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:background="@drawable/item_border"
            android:hint=" Nhập mã kệ hàng"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/qr_code_scan"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scan QR Code"
            android:src="@drawable/ic_qr_scan" />
    </LinearLayout>

    <!-- Ground Code 扫描框 -->
    <LinearLayout
        android:id="@+id/ground_code_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qr_code_section">


        <TextView
            android:id="@+id/ground_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="地码:"
            android:textSize="16sp"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/ground_code_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:background="@drawable/item_border"
            android:hint="Nhập mã mặt đất"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/ground_code_scan"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scan QR Code"
            android:src="@drawable/ic_qr_scan" />
    </LinearLayout>

    <!-- Prodcut Code 扫描框 -->
    <LinearLayout
        android:id="@+id/product_code_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ground_code_section">


        <TextView
            android:id="@+id/product_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="产品码:"
            android:textSize="16sp"
            app:layout_constraintWidth_percent="0.8" />

        <EditText
            android:id="@+id/product_code_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:background="@drawable/item_border"
            android:hint="Nhập mã SN sản phẩm"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/product_code_scan"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scan QR Code"
            android:src="@drawable/ic_qr_scan" />
    </LinearLayout>

    <!-- boxSize 箱子尺寸 -->
    <LinearLayout
            android:id="@+id/box_size_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_code_section">


        <TextView
                android:id="@+id/box_size_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="箱子尺码:"
                android:textSize="16sp"
                app:layout_constraintWidth_percent="0.8" />

        <EditText
                android:id="@+id/box_size_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"

                android:background="@drawable/item_border"
                android:hint="Kích thước thùng"
                android:inputType="text" />

        <ImageButton
                android:id="@+id/box_size_scan"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Scan QR Code"
                android:src="@drawable/ic_qr_scan" />
    </LinearLayout>

    <!-- 提交按钮 -->
    <TextView
        android:id="@+id/bind_ground_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginBottom="92dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="绑定                          Gắn kết sản phẩm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>