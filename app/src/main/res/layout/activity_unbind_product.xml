<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnbindProductActivity">

    <!-- 顶部导航栏 -->

    <!-- 地码输入框 -->

    <!-- 查询按钮 -->

    <!-- 显示绑定车的 TextView -->

    <!-- 解绑按钮 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="368dp"
        android:layout_height="362dp"
        android:inputType="none"
        app:layout_constraintBottom_toTopOf="@+id/unbind_button"
        app:layout_constraintTop_toBottomOf="@+id/ground_code_section"
        tools:itemCount="8"
        tools:layout_editor_absoluteX="27dp"
        tools:listitem="@layout/item_trolley_product_ro" />

    <LinearLayout
        android:id="@+id/ground_code_section"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"

        app:layout_constraintTop_toBottomOf="@+id/qr_code_section"
        tools:layout_editor_absoluteX="0dp">


        <TextView
            android:id="@+id/ground_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="绑定过的地码:"
            android:textSize="16sp"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/ground_code_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:background="@drawable/item_border"
            android:hint="" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="解绑产品 Hủy gán sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/qr_code_section"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_nav">

        <TextView
            android:id="@+id/qr_code_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="货架码:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/qr_code_input"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/item_border"
            android:hint=" Nhập mã kệ hàng"
            android:inputType="text" />

        <ImageButton
            android:id="@+id/qr_code_scan"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Scan Ground Code"
            android:src="@drawable/ic_qr_scan" />
    </LinearLayout>

    <Button
        android:id="@+id/unbind_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:enabled="true"
        android:text="解绑产品                    Hủy gán sản phẩm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>