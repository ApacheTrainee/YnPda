<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallModuleActivity">

    <!-- 上半部分 -->

    <ImageButton
        android:id="@+id/forklift"
        android:layout_width="204dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="forklift"
        android:scaleType="fitCenter"
        android:src="@drawable/forklift3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bottom_navigation" />

    <ImageButton
        android:id="@+id/home"
        android:layout_width="207dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.5"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="home"
        android:scaleType="fitCenter"
        android:src="@drawable/homepage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/bottom_navigation" />

    <LinearLayout
        android:id="@+id/top_navigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="AGV呼叫界面 Giao diện gọi AGV"
            android:textSize="24sp" />

    </LinearLayout>

    
    <LinearLayout
        android:id="@+id/trolley_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/top_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingBottom="8dp"
            android:text="叫料/下料 Gọi liệu / Tháo liệu"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- 横线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:orientation="horizontal"
            android:gravity="start">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/calltrolley"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/calltrolley"
                    android:contentDescription="calltrolley"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="叫料 Gọi liệu"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:orientation="vertical"
                android:gravity="start">
                <ImageButton
                    android:id="@+id/sendtrolley"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/sendtrolley"
                    android:contentDescription="sendtrolley"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="2dp"
                    android:text="下料 Tháo liệu"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
        <!-- 添加更多菜单项 -->
    </LinearLayout>


    <!-- 底部导航按钮 -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>
   
</androidx.constraintlayout.widget.ConstraintLayout>