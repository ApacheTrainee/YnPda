<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/item_border"
    android:layout_marginBottom="8dp">

    <!-- Left section: layerTextView -->
    <TextView
        android:id="@+id/layerTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Layer"
        android:textSize="16sp" />
    
    <!-- Right section: qr_code_scan, readOnlyTextView, deleteImageView -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp">

        <ImageButton
            android:id="@+id/qr_code_scan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_qr_scan"
            android:contentDescription="Scan QR Code"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:id="@+id/readOnlyTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Read Only Text"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/deleteImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete Icon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>