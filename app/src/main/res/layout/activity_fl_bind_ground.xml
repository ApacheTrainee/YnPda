    <TextView
        android:id="@+id/bind_ground_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="提示: 扫描一个码，再点击按钮                            Lưu ý: Quét một mã → Nhấn nút"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/submit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <!-- 提交按钮 -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="绑定 Gán mã mặt đất"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:id="@+id/number_1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个数：1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="295dp"
        android:backgroundTint="@drawable/button_color_selector"/>

    <Button
        android:id="@+id/number_2_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个数：2"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="295dp"
        android:backgroundTint="@drawable/button_color_selector"/>

    <Button
        android:id="@+id/number_3_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个数：3"
        tools:layout_editor_absoluteX="302dp"
        tools:layout_editor_absoluteY="295dp"
        android:backgroundTint="@drawable/button_color_selector"/>
</androidx.constraintlayout.widget.ConstraintLayout>